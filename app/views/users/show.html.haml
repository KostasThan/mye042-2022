.top_row
  .user_att
    - if @user.avatar_file_name
      = image_tag @user.avatar.url(:thumb), class: "userImage"
    %span= @user.email
  .buttonsGroup
    .follow_btn
      = link_to 'Follow Users', show_users_path(@user), class: ['btn', 'btn-primary']
    .logout_btn
      = link_to 'Logout', log_out_path, class: ['btn', 'btn-danger']
    .add_photo_btn
      = link_to 'Add Photo', new_user_photo_path(@user), class: ['btn', 'btn-success']


.photosContainer
  - if !@loggedInUserPhotos.empty?
    .well.col-sm-4.photoContainer
      .photoTitle
        - @users.each do |user|
          .uploadedBy
            - if user.id == @loggedInUserPhotos[0].user_id
              - if user.avatar_file_name
                = image_tag user.avatar.url(:thumb),class: "userImage small"
              %span{:class => "uploadedByField"}= user.email

      .wrapper
        %span{:class => "titleText", :id => "imageTitle"}= @loggedInUserPhotos[0].title
        .imageContainer
          = image_tag @loggedInUserPhotos[0].image.url(:medium), id: "slide"
        %div{:id => "hiddenImages"}
          - @loggedInUserPhotos.each do |photo|
            = image_tag photo.image.url(:medium), alt: photo.title
            

.photosContainer
  - @otherPhotosByUser.values.each do |userPhotos|
    - if !userPhotos.empty?
      .well.col-sm-4.photoContainer
        .photoTitle
          - @users.each do |user|
            .uploadedBy
              - if user.id == userPhotos[0].user_id
                - if user.avatar_file_name
                  = image_tag user.avatar.url(:thumb), class: "userImage small"
                %span{:class => "uploadedByField"}= user.email

        .wrapper
          %span{:class => "titleText"}= userPhotos[0].title
          .imageContainer
            = image_tag userPhotos[0].image.url(:medium), id: "slide"
          %div{:id => "hiddenImages"}
            - userPhotos.each do |photo|
              = image_tag photo.image.url(:medium), alt: photo.title
              
